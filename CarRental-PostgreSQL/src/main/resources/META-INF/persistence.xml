<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="postgres" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>pl.lodz.p.carrental.postgresql.model.client.Client</class>
        <class>pl.lodz.p.carrental.postgresql.model.client.ClientBronze</class>
        <class>pl.lodz.p.carrental.postgresql.model.client.ClientGold</class>
        <class>pl.lodz.p.carrental.postgresql.model.client.ClientPlatinum</class>
        <class>pl.lodz.p.carrental.postgresql.model.client.ClientSilver</class>
        <class>pl.lodz.p.carrental.postgresql.model.client.ClientStandard</class>
        <class>pl.lodz.p.carrental.postgresql.model.client.ClientType</class>

        <class>pl.lodz.p.carrental.postgresql.model.vehicle.Bicycle</class>
        <class>pl.lodz.p.carrental.postgresql.model.vehicle.Car</class>
        <class>pl.lodz.p.carrental.postgresql.model.vehicle.Moped</class>
        <class>pl.lodz.p.carrental.postgresql.model.vehicle.MotorVehicle</class>
        <class>pl.lodz.p.carrental.postgresql.model.vehicle.Vehicle</class>

        <class>pl.lodz.p.carrental.postgresql.model.AbstractEntity</class>
        <class>pl.lodz.p.carrental.postgresql.model.Address</class>
        <class>pl.lodz.p.carrental.postgresql.model.Rent</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/postgres"/>
            <property name="jakarta.persistence.jdbc.user" value="dbuser"/>
            <property name="jakarta.persistence.jdbc.password" value="dbpassword"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.connection.isolation" value="2"/>
        </properties>
    </persistence-unit>
</persistence>
